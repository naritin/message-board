<div class="form-horizontal" role="form">
<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <label class="col-sm-1 control-label">名前</label>
    <div class="col-sm-11">
      <%= f.text_field :name, class: "form-control", placeholder: "お名前を入力してください。" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-1 control-label">内容</label>
    <div class="col-sm-11">
      <%= f.text_area :body, class: "form-control", placeholder: "メッセージの内容を入力してください。", rows: "3" %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-1 control-label">年齢</label>
    <div class="col-sm-11">
      <%= f.text_field :age, class: "form-control", placeholder: "年齢を入力してください。" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-11">
      <%= f.submit class: "btn btn-sm btn-primary", value: "投稿" %>
    </div>
  </div>
<% end %>
</div>