<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>

  <div class="panel-body">
   <table class="table table-striped">
    <thead>
     <tr>
       <th>年齢</th>
       <th>名前</th>
       <th>コメント</th>
       <th>編集</th>
       <th>削除</th>
     </tr>
    </thead>
   <tbody>
    <% @messages.each do |message| %>
     <tr>
       <td><%= message.age %></td>
       <td><span class="label label-info"><%= message.name %></span></td>
       <td><%= message.body %></td>
       <td><%= link_to "edit" , edit_message_path(message) %></td>
       <td><%= link_to "destroy" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %></td>
     </tr>
    <% end %>
   </tbody>
 </table>
 </div>
</div>

<%= render 'form' %>
